<% include partials/header %>
<div class="container">
  <div class="row">
    <div class="col-6 offset-3">
    <h3 class="text-center"><%= blog.title %></h3>
      <form action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <input id="title" class="form-control" type="text" name="title" value="<%= blog.title %>">
      </div>

      <div class="form-group">
        <input id="image" class="form-control" type="text" name="image" value="<%= blog.image %>">
      </div>

      <div class="form-group">
        <textarea class="form-control" type="text" name="body" ><%= blog.body %></textarea>
      </div>

        <input class="btn btn-block btn-outline-primary" type="submit">
      </form>
    </div>
  </div>
</div>
<% include partials/footer %> 