<% include partials/header %>
   <div class="container">
      <header class="jumbotron">
         <div class="container">
            <h1>Welcome to campgrounds</h1>
            <a class="btn btn-success" href="/campgrounds/new">Add new campground</a>
         </div>
      </header>

      <div class="row">
      <% for(let index = 0 ; index < campgrounds.length ; index++){ %>
         <div class="col-4">
            <p class="lead"><%= campgrounds[index].name %> - <strong> <%= campgrounds[index].image %> </strong></p>         
         </div>
      <% } %>
      </div>

      <footer class="footer">
         <p>Copyright 2016 - <%= new Date().getFullYear() %></p>
      </footer>
   </div>
<% include partials/footer %>

  
   
